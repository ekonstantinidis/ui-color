{
  "name": "ui-color",
  "version": "1.0.0",
  "description": "UIColor is a website used to convert HEX & RGB colors to UIColor for both Objective-C and Swift.",
  "main": "build/js/app.js",
  "scripts": {
    "test": "jsxhint 'src/js/*.js'",
    "create-build-dirs": "mkdir -p build/js build/css",
    "build-less": "lessc --silent src/less/style.less build/css/style.css",
    "watch-less": "watch 'npm run build-less' src/less/",
    "build-javascript": "browserify -t reactify src/js/app.js -o build/js/app.js",
    "watch-javascript": "watchify -t reactify src/js/app.js -o build/js/app.js -v",
    "build-font-awesome": "cp -r node_modules/font-awesome/fonts build",
    "build-bootstrap-fonts": "cp -r node_modules/bootstrap/fonts build",
    "build-fonts": "mkdir -p build/fonts && npm run build-bootstrap-fonts && npm run build-font-awesome",
    "build-images": "mkdir -p build/images && cp -r src/images/ build/images/",
    "build": "npm run create-build-dirs && npm install && npm run build-images && npm run build-fonts && npm run build-javascript && npm run build-less",
    "watch": "npm run watch-javascript & npm run watch-less"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ekonstantinidis/ui-color.git"
  },
  "keywords": [
    "uicolor",
    "ui-color",
    "rgb",
    "rgba",
    "hex",
    "conver",
    "converter",
    "swift",
    "objective-c"
  ],
  "author": "Emmanouil Konstantinidis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ekonstantinidis/ui-color/issues"
  },
  "homepage": "https://github.com/ekonstantinidis/ui-color",
  "dependencies": {
    "bootstrap": "=3.3.4",
    "browserify": "=9.0.8",
    "font-awesome": "^4.3.0",
    "less": "=2.5.0",
    "react": "=0.13.2",
    "react-bootstrap": "=0.20.3",
    "react-tools": "=0.13.2",
    "reactify": "=1.1.0"
  },
  "devDependencies": {
    "jsxhint": "=0.14.0",
    "watch": "=0.16.0",
    "watchify": "=3.1.1"
  }
}
